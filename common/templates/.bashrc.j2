# .bashrc

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Shell configuration
alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '

# User specific aliases and functions

# Enable two-finger scroll
xmodmap -e "pointer = 1 2 3 5 4 7 6 8 9 10 11 12"

{% if inst_heroku %}
# Heroku toolbelt
PATH="$PATH:/usr/local/heroku/bin"

{% endif %}
{% if inst_pythonz %}
# Pythonz configuration
[[ -s /home/${username}/.pythonz/etc/bashrc ]] && source /home/${username}/.pythonz/etc/bashrc

{% endif %}
{% if inst_virtualenvwrapper %}
# Enable Python virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs
source /usr/bin/virtualenvwrapper.sh

{% endif %}
{% if inst_adt %}
# Android tools with NDK
PATH=$PATH:$HOME/extra/adt-bundle-linux-x86_64/sdk/platform-tools:$HOME/extra/adt-bundle-linux-x86_64/sdk/tools

{% endif %}
{% if inst_ndk %}
# Android NDK
PATH=$PATH:$HOME/extra/android-ndk-r8d

{% endif %}
{% if inst_java %}
# Java home
export JAVA_HOME=/opt/java
PATH=$PATH:$JAVA_HOME/bin

{% endif %}
{% if inst_seam %}
# Seam Framework
export SEAM_HOME=~/extra/seam
PATH=$PATH:$SEAM_HOME

{% endif %}
{% if inst_rvm %}
# Ruby RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
PATH=$PATH:$HOME/.rvm/bin

{% endif %}
{% if inst_nvm %}
# NodeJS Version Manager
[[ -s /home/${username}/.nvm/nvm.sh ]] && . /home/${username}/.nvm/nvm.sh

{% endif %}